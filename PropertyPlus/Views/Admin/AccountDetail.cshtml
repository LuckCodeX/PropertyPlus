@model PropertyPlus.Models.UserProfileModel

@{
    ViewBag.Title = "Tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tài khoản</h2>
        <ol class="breadcrumb">
            @*<li>
                    <a href="@Url.Action("Index", "Admin")">Trang chủ</a>
                </li>*@
            <li>
                <a href="@Url.Action("Account", "Admin")">Tài khoản</a>
            </li>
            <li class="active">
                <strong>Chi tiết tài khoản</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    @using (Html.BeginForm("AccountDetail", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Họ</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = true })
                            </div>
                            <label class="col-sm-2 control-label">Tên</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = true })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mật khẩu mới</label>
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Xác nhận mật khẩu</label>
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" id="submitButton" type="submit">Lưu</button>
                                <a class="btn btn-white marleft-30" href="@Url.Action("Blog", "Admin")">Thoát</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
